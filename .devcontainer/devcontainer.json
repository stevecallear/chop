{
	"name": "Go",
	"build": {
		"dockerfile": "Dockerfile",
		"args": {
			"VARIANT": "1.16",
			"INSTALL_NODE": "true",
			"NODE_VERSION": "lts/*"
		}
	},
	"runArgs": [
		"--cap-add=SYS_PTRACE",
		"--security-opt",
		"seccomp=unconfined"
	],
	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash",
		"go.gopath": "/go"
	},
	"extensions": [
		"golang.Go",
		"humao.rest-client"
	],
	"postCreateCommand": "go version"
}